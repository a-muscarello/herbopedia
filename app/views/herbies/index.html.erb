<p id="notice"><%= notice %></p>

<h1>Herbies</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @herbies.each do |herby| %>
      <tr>
        <td><%= herby.user_name %></td>
        <td><%= herby.user_id %></td>
        <td><%= link_to 'Show', herby %></td>
        <td><%= link_to 'Edit', edit_herby_path(herby) %></td>
        <td><%= link_to 'Destroy', herby, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

