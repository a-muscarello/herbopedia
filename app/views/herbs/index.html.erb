
<p id="notice"><%= notice %></p>

<h1>Herbs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Info sheet</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @herbs.each do |herb| %>
      <tr>
        <td><%= herb.user_id %></td>

        <td><%= herb.title %></td>
        <td><%= herb.description %></td>
        <td><%= herb.info_sheet %></td>
       
        <td><%= image_tag herb.image_url, width: '100%' if herb.image.present? %></td>
        <td><%= link_to 'Show', herb %></td>
        <td><%= link_to 'Edit', edit_herb_path(herb) %></td>
        <td><%= link_to 'Destroy', herb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Herb', new_herb_path %>
