          </ul>

          <div class="nav-item login_form" >
            <a href="/users/sign_in"><button class="btn btn-sm btn-outline-dark login_button" style="float:right">sign in</button></a>

            <a href="/users/sign_in"><button class="btn btn-sm btn-outline-dark login_button" style="float:right">sign up</button></a>
          </div>
        </div>
      </div>

        

    </nav>


  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
